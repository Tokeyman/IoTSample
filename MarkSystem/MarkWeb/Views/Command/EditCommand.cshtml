@model MarkWeb.Models.CommandViewModel
@{
    ViewBag.Title = "EditCommand";
    ViewBag.Title = "Program";
}

<p>
    @using (Html.BeginForm("EditCommand", "Command", FormMethod.Post, htmlAttributes: new { @class = "fom-horizontal", role = "form" }))
    {
        <div class="row">
            @Html.HiddenFor(model => model.CommandGroupId)
            <div class="col-sm-3">
                <div class="form-horizontal">
                    @Html.LabelFor(model => model.TimingText, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.TimingText, new { htmlAttributes = new { @class = "form-control", @style = "height:400px" } })
                    <div class="space-12"></div>
                    <div class="form-group">
                        <div class=" col-md-10">
                            <input type="submit" value="提交" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-horizontal">
                    @Html.LabelFor(model => model.RepeatText, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.RepeatText, new { htmlAttributes = new { @class = "form-control", @style = "height:400px" } })

                </div>
            </div>

            <div class="col-sm-6"></div>

        </div>

    }
</p>